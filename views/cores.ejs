<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/basic.css" />
    <title>Cores</title>
  </head>
  <body>
    <h1>SpaceX Cores</h1>
    <%cores.forEach(core => {%>
    <div class="card">
      <div class="card-content">
        <p class="title"><%=core.serial%></p>
        <p class="subtitle"><%=core.last_update%></p>
      </div>
      <footer class="card-footer">
        <p class="card-footer-item">
          <span> Resuse Count: <%=core.reuse_count%> </span>
        </p>
        <p class="card-footer-item">
          <span>
            Succesfull returns to launch site: <%=core.rtls_landings%>
          </span>
        </p>
        <p class="card-footer-item">
          <span>
            Succesfull landings at destinations site: <%=core.asds_landings%>
          </span>
        </p>
        <p class="card-footer-item">
          <span> Status: <%=core.status%> </span>
        </p>
      </footer>
    </div>
    <hr />
    <%})%>
  </body>
</html>
